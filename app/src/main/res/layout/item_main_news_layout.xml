<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="125dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <com.example.liuyuhua.cainiaonews.widget.RoundImageView
            android:id="@+id/iv_author"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:roundWidth="10dp"
            app:roundHeight="10dp"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/iv_author"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color_head_title"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_author"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color_head_title"
            android:text="10分钟前"/>

        <View
            android:id="@+id/view_label"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@color/mask_tags_12"/>

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/view_label"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/mask_tags_12"
            android:text="专栏"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:textColor="@color/color_black"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="这届 SXSW 音乐节上，音乐是配角，AI 才是主角"/>

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerInside"/>

    </LinearLayout>

</LinearLayout>